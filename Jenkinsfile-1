#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('Single Stage') {
            steps {
                sh 'echo Single Stage running..!'
                echo "Branch ${env.BRANCH_NAME}"
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                echo "Current Build number is: #${currentBuild.number}"
                sh 'ls -alt'
            }
        }
    }
}